<%= simple_form_for(@image_asset) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :slug %>
    <%= f.input :lg %>
    <%= f.input :md %>
    <%= f.input :sm %>
    <%= f.input :xs %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
