<p id="notice"><%= notice %></p>
<hr>

<div class="row">
  <div class="col-xs-3 col-md-3 align-left">
    <% if @post.tag_list.size > 0 %>
      <div class='tag_list WF-thin'><%= fa_icon('tags') + " " + tag_icons(@post.tag_list) %></div>
    <% end %>
  </div>
  <div class="col-xs-6 col-md-6 align-center"><h1 class="WF-bold align-center"><%= @post.title %></h1></div>
  <div class="col-xs-3 col-md-3 align-right header-date"> <%= @post.created_at.strftime('%Y-%m-%d %H:%M') %> </div>
</div>

<div class="show-image">
  <center>
  <%= image_tag(@post.picture_url, class: "img-responsive") if @post.picture? %>
  </center>
</div>

<div class='markdown-converter'>
  <%= raw(BlueCloth.new(@post.contents.gsub(/<[^(>|\/)]*?script.*?>([^<]*?)<.*?\/script.*?>/, '')).to_html) %>
</div>

<hr>
  첨부파일 : <%= link_to(@post.picture_url, @post) if @post.picture? %>
<hr>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4"></div>
  <div class="col-md-4 align-right">
    <%= link_to 'Edit',edit_post_path(@post), class: 'btn btn-primary btn-lg' %>
    <%= link_to 'Back', posts_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<script>
  $(".markdown-converter > p > img").parent(this).css("text-align", "center");
  $(".markdown-converter > p > img").css("margin", "33px");
  $(".markdown-converter > p > iframe").parent(this).css("text-align", "center");
  $(".markdown-converter > p > iframe").css("margin", "33px");
</script>